<h1>Create a Job Ad</h1>
<%= form_for :job do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
  </p>
  <%= f.label :end_date %>
  <%= f.date_field :end_date %>

  <%= f.label :requirements %>
  <%= f.text_area :requirements %>

  <%= f.submit %>
<% end %>
