<h1>Edit Job</h1>

<%= form_for :job, url: job_path(@job), method: :patch do |f| %>

  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@job.errors.count, "error") %>
      </h2>
      <ul>
        <% @job.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :start_date %><br>
    <%= f.date_field :start_date %>
  </p>
  <p>
    <%= f.label :end_date %><br>
    <%= f.date_field :end_date %>
  </p>
  <p>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :event_type %><br>
    <%= f.select :event_type, ['Technology'] %>
  </p>
  <p>
    <%= f.label :requirements %><br>
    <%= f.text_area :requirements %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <%= f.submit %>
<% end %><br>

<%= link_to "Back", jobs_path %>
